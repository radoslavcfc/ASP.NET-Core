@using Microsoft.AspNetCore.Identity
@using Panda.Domain
@using Panda.App.Extensions
@inject SignInManager<PandaUser> SignInManager
@inject UserManager<PandaUser> UserManager

    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav ml-auto">

            @if (this.User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <span id="manage" class="navbar-brand nav-link-white" title="Manage">Hello @User.Identity.Name.Capitalize() !</span>
                </li>
               
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="navbar-brand nav-link-white btn btn-link">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="navbar-brand nav-link-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand nav-link-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }

        </ul>
    </div>