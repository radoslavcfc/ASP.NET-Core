@using Microsoft.AspNetCore.Identity
@inject SignInManager<AgencyUser> SignInManager
@inject UserManager<AgencyUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["UserLoggedIn"] != null)
{
    <div class="text-success">
        @TempData["UserLoggedIn"]
    </div>
}

   
<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <h3>Thank you for creating your account!</h3>
        <h5>We will need some more information about you in order to proceed your job application.</h5>
        <h5>Please prepare yourself to answer a few questions about your details, and your work experience.</h5>
        <h5>If you have already worked in the UK, we would like more detailed information about your UK experience.</h5>
        <h5>Please click below if you agree with all above and if you wish to proceed.</h5>
        <div class="btn btn-info">Proceed with the application </div>
    }
    else
    {
        <div id="indexTitle">
            <h1>Welcome</h1>
            <h5>to our </h5>
            <h3>job application platform!</h3>
        </div>

        <div class="row">
            <div class="col-lg-6 mt-lg-2 border rounded h-350 p-035 loginBg">
                <h3 class="text-center"> If you have an account</h3>
                <a class="btn btn-info w-50" asp-area="Identity" asp-page="/Account/Login">Login</a>

                <br /><br />
                <h3 class="text-center"> If you haven`t</h3>

                <a class="btn btn-info w-50" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
            <div class="col-lg-6 mt-lg-2">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">

                            <img class="d-block w-100 h-333" src="~/photos/IndexPage/FrontOne.JPG" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>TextTextTextTextTextTextText</h5>
                                <p>TextTextTextTextTextTextTextTextTextTextTextTextTextTextText</p>
                                <a href="#" class="btn btn-info">Learn more</a>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 h-333" src="~/photos/IndexPage/FrontTwo.JPG" alt="Second slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>TextTextTextTextTextTextText</h5>
                                <p>TextTextTextTextTextTextTextTextTextTextTextTextTextTextText</p>
                                <a href="#" class="btn btn-info">Learn more</a>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 h-333" src="~/photos/IndexPage/FrontThree.jpg" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>TextTextTextTextTextTextText</h5>
                                <p>TextTextTextTextTextTextTextTextTextTextTextTextTextTextText</p>
                                <a href="#" class="btn btn-info">Learn more</a>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    }

</div>
