@model CompleteWorkerDataModel

@{
    ViewData["Title"] = "Complete worker data";
}


<div class="mx-auto w-75 justify-content-between">  

    <form method="post" asp-action="Create">
        <h5 class="d-block">
            Please fill in your other personal data:
        </h5>

        <div class="form-row mb-1">

            <div class="col-md-3 m-2">
                <label asp-for="@Model.DOB"></label>
                <input asp-for="@Model.DOB" class="form-control" />
                <span asp-validation-for="@Model.DOB" class="text-danger"></span>
            </div>

            <div class="col-md-3 m-2">
                <label asp-for="@Model.Gender"></label>
                <select asp-for="@Model.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option>Select gender</option>
                </select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="col-md-3 m-2">
                <label asp-for="@Model.Nationality"></label>
                <input asp-for="@Model.Nationality" class="form-control" />
                <span asp-validation-for="@Model.Nationality" class="text-danger"></span>
            </div>
        </div>
        <h5>
            Please fill in your availability details:
        </h5>

        <div class="form-row mb-1">
            <div class="col-md-3 m-2">
                <label asp-for="@Model.AvailableFrom"></label>
                <input asp-for="@Model.AvailableFrom" class="form-control" />
                <span asp-validation-for="@Model.AvailableFrom" class="text-danger"></span>
            </div>
            <div class="col-md-3 m-2">
                <label asp-for="@Model.AvailableTo"></label>
                <input asp-for="@Model.AvailableTo" class="form-control" />
                <span asp-validation-for="@Model.AvailableTo" class="text-danger"></span>
            </div>

            <div class="col-md-3 m-2">
                <label asp-for="@Model.CurrentlyIn"></label>
                <input asp-for="@Model.CurrentlyIn" class="form-control" />
                <span asp-validation-for="@Model.CurrentlyIn" class="text-danger"></span>
            </div>
        </div>

        <h5>
            Please tell us about your friends/relative who you want to travel with, and how did you find about us:
        </h5>
       

        <div class="form-row ">
            <div class="col-md-6 m-2">
                <label asp-for="@Model.Relatives"></label>
                <input asp-for="@Model.Relatives" class="form-control" />
                <span asp-validation-for="@Model.Relatives" class="text-danger"></span>
            </div>

            <div class="col-md-6 m-2">
                <label asp-for="@Model.ConnectionSource"></label>
                <input asp-for="@Model.ConnectionSource" class="form-control" />
                <span asp-validation-for="@Model.ConnectionSource" class="text-danger"></span>
            </div>


        </div>
        <div class="form-group justify-content-center">
            <input type="submit" class="btn btn-success w-75 m-auto" value="Submit" />
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
