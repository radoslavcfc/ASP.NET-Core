
@model List<PackagePendingViewModel>
@{
    ViewData["Title"] = "Pending Packages";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<a class="btn btn-dark" href="/Packages/Index">Back to all packages</a>
<hr />
<div class="d-flex justify-content-between">
    @if (Model.Count <= 0)
    {
        <h2>There are no pending packages!</h2>
    }
    else
    {
        <table class="table table-bordered table-hover w-75 m-auto">
            <thead>
                <tr class="row">
                    <th class="col-lg-2 d-flex justify-content-center">Description</th>
                    <th class="col-lg-1 d-flex justify-content-center">Weight</th>
                    <th class="col-lg-5 d-flex justify-content-center">Shipping Address</th>
                    <th class="col-lg-2 d-flex justify-content-center">Receipient</th>
                    <th class="col-lg-2 d-flex justify-content-center">Deliever</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pendingPackage in Model)
                {
                    <tr class="row">
                        <td class="col-lg-2 d-flex justify-content-center">@pendingPackage.Description</td>
                        <td class="col-lg-1 d-flex justify-content-center">@pendingPackage.Weight</td>
                        <td class="col-lg-5 d-flex justify-content-center">@pendingPackage.ShippingAddress</td>
                        <td class="col-lg-2 d-flex justify-content-center">@pendingPackage.Recipient</td>
                        <td class="col-lg-2 d-flex justify-content-center">
                            @if (this.User.IsInRole("Admin"))
                            {
                                <form>
                                    <button class="btn btn-dark" asp-controller="Packages" asp-action="Deliver" asp-route-packageId="@pendingPackage.Id">Mark as delivered</button>
                                </form>
                            }
                            else
                            {
                                <span>Pending...</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
</div>
