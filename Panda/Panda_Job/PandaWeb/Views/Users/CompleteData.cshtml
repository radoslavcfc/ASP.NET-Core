@model UserCompleteDataModel
@{ ViewData["Title"] = "Complete User Info"; }

<a class="btn btn-dark" href="/Home/Index">Back to all options</a>

<form class="mx-auto w-50" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control inputData" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control inputData" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control inputData" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.SecondContactNumber"></label>
            <input asp-for="@Model.SecondContactNumber" class="form-control inputData" />
            <span asp-validation-for="@Model.SecondContactNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <hr /> <br />
    </div>
    <div id="saveBut" class="form-group">
        <input type="submit" class="btn btn-dark" value="Save" />
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}