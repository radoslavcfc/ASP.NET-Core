    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - SeasonalWorkers</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/myStyles.css" rel="stylesheet" />     
    </head>
   
    <body>
        <header>
            <nav class="navbar navbar-expand-sm headerAndFooterBg navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand border-success" asp-area="" asp-controller="Home" asp-action="Index">SW</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <select class="border-secondary rounded headerAndFooterBg" data-width="fit">
                             <option data-content='<span class="flag-icon flag-icon-uk"></span> English'>EN</option>
                             <option data-content='<span class="flag-icon flag-icon-bg"></span> Español'>BUL</option>
                        </select>                        
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-2">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Farm Info
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Your travel</a>
                                    <a class="dropdown-item" href="#">Your work</a>
                                    <a class="dropdown-item" href="#">Your accommodation</a>
                                </div>
                            </li>
                        </ul>

                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>      
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>      
        <footer class="border-top footer headerAndFooterBg">
            <div class="container">
                <a class="footerTxt h5 float-left mt-3" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <span class="footerTxt h5 float-right mt-3">&copy; 2020 - SeasonalWorkers</span> 
            </div>           
        </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
           
            @RenderSection("Scripts", required: false)
    </body>
    </html>
