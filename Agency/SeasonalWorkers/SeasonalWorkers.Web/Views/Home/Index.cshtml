@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1>Welcome</h1>
        <h5>to our </h5>
        <h3>job application platform!</h3>
        <div class="row">
            <div class="col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/photos/main.jpg" alt="First slide">
                            
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/photos/tt1.jpg" alt="Second slide">
                            
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/photos/tt2.jpg" alt="Third slide">
                            
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 mt-lg-2">
                <form class="hero-form">
                    <h3 class="text-white text-center"> If you have an account</h3>
                    <button class="btn btn-info w-50">Login</button>
                    <h3 class="text-white text-center"> If you haven`t</h3>
                    <button class="btn btn-info w-50">Register</button>

                </form>
            </div>
        </div>
    </div>
