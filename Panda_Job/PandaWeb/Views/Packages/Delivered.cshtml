
@model List<PackageDeliveredViewModel>
@{
    ViewData["Title"] = "Delivered Packages";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<a class="btn btn-dark" href="/Packages/Index">Back to all packages</a>
<hr />
<div class="d-flex justify-content-between">
    @if (Model.Count <= 0)
    {
    <h2>There are no delivered packages!</h2>
    }
    else
    {
        <table class="table table-bordered table-hover w-75 m-auto">
            <thead>
                <tr class="row">
                    <th class="col-lg-5 d-flex justify-content-center">Description</th>
                    <th class="col-lg-2 d-flex justify-content-center">Weight</th>
                    <th class="col-lg-2 d-flex justify-content-center">Shipping Address</th>
                    <th class="col-lg-2 d-flex justify-content-center">Receipient</th>
                    <th class="col-lg-1 d-flex justify-content-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var deliveredPackage in Model)
                {
                    <tr class="row">
                        <td class="col-lg-5 d-flex justify-content-center">@deliveredPackage.Description</td>
                        <td class="col-lg-2 d-flex justify-content-center">@deliveredPackage.Weight.</td>
                        <td class="col-lg-2 d-flex justify-content-center">@deliveredPackage.ShippingAddress</td>
                        <td class="col-lg-2 d-flex justify-content-center">@deliveredPackage.Recipient</td>
                        <td class="col-lg-1 d-flex justify-content-center">DELIEVERED</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
