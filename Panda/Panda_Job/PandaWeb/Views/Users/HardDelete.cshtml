@model HardDeleteUserModel
@{ ViewData["Title"] = "Delete From Database"; }

<form class="mx-auto width-30" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="@Model.Id" />

        <label asp-for="@Model.FullName"></label>
        <input asp-for="@Model.FullName" class="form-control inputData" readonly />

    </div>
    <div class="form-group">
        <label asp-for="@Model.Confirm"></label>
        <input asp-for="@Model.Confirm" class="form-control inputData" />
        <span asp-validation-for="@Model.Confirm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <hr /> <br />
    </div>
    <div id="saveBut" class="form-group justify-content-around">
        <input type="submit" class="btn btn-danger" value="REMOVE" />
        <a asp-controller="Users" asp-action="Index"  class="btn btn-dark text-white" value="Cancel"> Cancel</a>
    </div>
</form>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}